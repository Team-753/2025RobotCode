import wpilib
import commands2
from robotContainer import RobotContainer
class MyRobot(commands2.TimedCommandRobot):
    def __init__(self, period = .02):
        super().__init__(period)
    
    def robotInit(self):
        #self.robotContainer = RobotContainer()

        self.xbox=wpilib.XboxController(0) #ryan said plake holder ahhh

        self.pneumaticsHub = wpilib.PneumaticHub(20)

        self.solenoid = self.pneumaticsHub.makeDoubleSolenoid(1,0)

        self.compressor = self.pneumaticsHub.makeCompressor()

        self.pistonExtended = False
        self.compressorOn = False

        #self.motor2.
    def teleopPeriodic(self):
        
        if self.xbox.getAButtonPressed():
            self.pistonExtended = not self.pistonExtended
            print(self.pistonExtended)
            if (self.pistonExtended):
                print("go piston")
                self.solenoid.set(wpilib.DoubleSolenoid.Value.kForward)
            else:
                print("come back piston")
                self.solenoid.set(wpilib.DoubleSolenoid.Value.kReverse)

        if self.xbox.getYButtonPressed():
            self.compressorOn = not self.compressorOn
            print(self.compressorOn)
            if (self.compressorOn):
                print("Compressor On")
                self.compressor.enableDigital()
            else:
                print("OFF COMPRESSOR")
                self.compressor.disable()

        pass
        
    def teleopInit(self):
        pass
            
            
